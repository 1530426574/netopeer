; **************************************************************************
; * Global options                                                         *
; **************************************************************************

; PID is created inside the chroot jail
pid = @CONFIGURE_PWD@/stunnel/stunnel.pid

; Debugging stuff (may useful for troubleshooting)
debug = 7
output = ./stunnel.log

; **************************************************************************
; * Service defaults may also be specified in individual service sections  *
; **************************************************************************

; Certificate/key
cert = ./server.pem
;key = ./server.key

; Verify peer with locally installed certificate. 
verify = 3

; CA certificate, with verify level 3, it also includes allowed client
; certificates.
CAfile = ./rootCA.pem

; Disable support for insecure SSLv2 protocol
options = NO_SSLv2

; **************************************************************************
; * Service definitions (remove all services for inetd mode)               *
; **************************************************************************

; SSL server mode services

[netconf]
accept  = :::6513
exec = @prefix@/bin/netopeer-agent
execargs = netopeer-agent
pty = no

