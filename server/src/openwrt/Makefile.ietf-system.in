NAME = ietf-system

# Various configurable paths (remember to edit Makefile.in, not Makefile)
prefix = @prefix@
exec_prefix = @exec_prefix@
datarootdir = @datarootdir@
datadir = @datadir@
bindir = @bindir@
includedir = @includedir@
libdir =  @libdir@
mandir = @mandir@
sysconfdir = @sysconfdir@

TOPDIR = @CONFIGURE_PWD@
CFGDIR = $(DESTDIR)/$(sysconfdir)/netopeer/
CC = @CC@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL@ -m 600

CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@

MANAGER = $(TOPDIR)/manager/netopeer-manager

OBJDIR= .obj

SRCS =	ietf-system.c \
		parse.c \
		dns_resolver.c \
		local_users.c \
		encrypt.c \
		salt.c

OBJS = $(SRCS:%.c=$(OBJDIR)/%.o)

CFGS =	ietf-system.yin \
	ietf-system.xml

all: clean $(NAME)

$(NAME): $(OBJS)
	@rm -f $@
	$(CC) -shared $(OBJS) $(LIBS) -Wl,-soname -Wl,$@.so -o $@.so;

$(OBJDIR)/%.o: %.c
	@[ -d $$(dirname $@) ] || \
		(mkdir -p $$(dirname $@))
	$(CC) $(CFLAGS) $(CPPFLAGS) $(DEFINE) -fPIC -c $< -o $@

.PHONY: clean
clean:
	rm -rf $(NAME).so $(OBJDIR)

.PHONY: install
install: $(NAME).so $(CFGS)
	$(INSTALL) -d $(CFGDIR)/$(NAME);
	$(INSTALL_PROGRAM) $(NAME).so $(CFGDIR)/$(NAME)/;
	for i in $(CFGS); do \
		$(INSTALL_DATA) $$i $(CFGDIR)/$(NAME)/; \
	done
	$(MANAGER) add --name $(NAME) \
		--model $(CFGDIR)/$(NAME)/ietf-system.yin \
		--transapi $(CFGDIR)/$(NAME)/ietf-system.so \
		--datastore $(CFGDIR)/$(NAME)/datastore.xml \
		--features authentication local-users ntp timezone-name

